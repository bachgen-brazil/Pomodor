start.addEventListener('click', () => {
    if(!isRunning){
        stop = setInterval(Timer,1000)
        isRunning = true
    }
})

parar.addEventListener('click', ()=>{
    if(isRunning){
        clearInterval(stop)
        isRunning = false
    }
})
